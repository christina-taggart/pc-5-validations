source :rubygems

# PostgreSQL driver
gem 'pg'

# Sinatra driver
gem 'sinatra'

# Use Chronic to parse Dates easily
gem 'chronic'

# Use Thin for our web server
gem 'thin'

gem 'activesupport'
gem 'activerecord'

gem 'rake'
gem 'bcrypt-ruby'

gem 'shotgun'

group :development, :test do
  gem 'faker'
  gem 'rspec'
end
