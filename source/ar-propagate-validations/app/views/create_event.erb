<form action="/events/create" method="POST">
  <fieldset>
    <legend>Create an Event</legend>
    <div>
      Title: <input type="text" name="title" value=<%= @title %>>
      Organizer Name: <input type="text" name="organizer_name" value=<%= @organizer_name %>>
    </div>
    <div>
      Organizer Email: <input type="email" name="organizer_email" value=<%= @organizer_email %>>
      Date of Event: <input type="date" name="date" value=<%= @date %>>
    </div>
    <input type="submit" value="submit">
  </fieldset>
</form>

<% if @errors %>
  <%= erb :display_validation_errors %>
<% end %>