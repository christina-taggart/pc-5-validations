<form action="/events/create" method="POST">
  <fieldset>
    <legend>Create an Event</legend>
    <input type="text" name="title" value="Event title here">
    <input type="text" name="organizer_name" value="Enter organizer name...">
    <input type="email" name="organizer_email" value="email goes here">
    <input type="date" name="date">
    <input type="submit" value="submit">
  </fieldset>
</form>

<% if @errors %>
  <%= erb :display_validation_errors %>
<% end %>