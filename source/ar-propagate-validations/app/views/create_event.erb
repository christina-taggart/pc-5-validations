	<% if @errors %>
	<h1> New Event </h1>
	<form action="/events/new" method="post">
		Name: <input type="text" name="organizer_name" value='<%= "#{params[:organizer_name]}" %>'>	<br>Email: <input type="text" name="organizer_email" value= '<%= "#{params[:organizer_email]}" %>'><br>
		Title: <input type="text" name="title" value= '<%= "#{params[:title]}" %>'><br>
		Date: <input type="date" name="date" value= '<%= "#{params[:date]}" %>'><br>
		<input type="submit" value="New Event">
	</form>
	<div class = "errors">
		<% @errors.each do |error|  %>
		<p> <%=  error %> <p>
			<% end %>
			<% end %>
		</div>
	</div>